{
  "name": "paysage-api",
  "version": "0.0.1",
  "description": "API Paysage",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "deploy": "npm version ${npm_config_level}",
    "setup:database": "NODE_ENV=${npm_config_env} node --experimental-specifier-resolution=node src/setup/database.js",
    "setup:storage": "NODE_ENV=${npm_config_env} node --experimental-specifier-resolution=node src/setup/storage.js",
    "setup:elastic": "NODE_ENV=${npm_config_env} node --experimental-specifier-resolution=node src/setup/elastic.js",
    "docs:build": "swagger-cli bundle src/openapi/api.yml --outfile docs/reference/api.yml --type yaml && swagger-cli bundle src/openapi/auth.yml --outfile docs/reference/auth.yml --type yaml",
    "api:test": "NODE_ENV=testing node --experimental-specifier-resolution=node --experimental-vm-modules node_modules/.bin/jest --runInBand",
    "api:dev": "NODE_ENV=development PORT=${npm_config_port} nodemon --experimental-specifier-resolution=node index.js",
    "api:start": "NODE_ENV=${npm_config_env} PORT=${npm_config_port} node --experimental-specifier-resolution=node index.js",
    "test": "npm run docs:build && npm run setup:database --env=testing && npm run api:test",
    "start": "npm run docs:build && npm run setup:database --env=development && npm run setup:storage --env=development && npm run api:dev",
    "start:staging": "npm run docs:build  && npm run api:start --env=staging",
    "start:production": "npm run docs:build && npm run api:start --env=production"
  },
  "keywords": [
    "paysage"
  ],
  "author": "DOAD",
  "license": "MIT",
  "dependencies": {
    "@cloudnative/health-connect": "^2.1.0",
    "@elastic/elasticsearch": "7.12.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-openapi-validator": "^4.12.11",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.6",
    "multer": "^1.4.4",
    "nodemailer": "^6.6.2",
    "swagger-ui-express": "^4.1.6",
    "swift": "^2.7.3",
    "winston": "^3.3.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "eslint": "^8.7.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.0.0",
    "jest": "^27.0.6",
    "jest-mock": "^28.0.2",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.4",
    "swagger-cli": "^4.0.4"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "modulePathIgnorePatterns": [
      "save"
    ],
    "setupFilesAfterEnv": [
      "./tests/globalSetup.js"
    ],
    "testEnvironment": "node"
  }
}
